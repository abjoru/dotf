# general settings
auto-reload yes
max-items 50

# external browser
#browser "open %u"
#download-path "~/Downloads/%n"
#save-path "~/Downloads"
cleanup-on-quit yes
#macro m set browser "/usr/local/bin/mpv %u"; open-in-browser ; set browser "/usr/local/bin/w3m %u"
#macro l set browser "open %u"; open-in-browser ; set browser "open %u"

# unbind keys
#unbind-key ENTER
#unbind-key j
#unbind-key k
#unbind-key J
#unbind-key K

# bind keys - vim style
bind-key G end
bind-key g home
bind-key j down
bind-key k up

# Nord Theme
color background          color236   default
color listnormal          color248   default
color listnormal_unread   color6     default
color listfocus           color236   color12
color listfocus_unread    color15    color12
color info                color248   color236
color article             color248   default

# highlights
highlight article "^(Feed|Link):.*$" color6 default bold
highlight article "^(Title|Date|Author):.*$" color6 default bold
highlight article "https?://[^ ]+" color10 default underline
highlight article "\\[[0-9]+\\]" color10 default bold
highlight article "\\[image\\ [0-9]+\\]" color10 default bold
highlight feedlist "^─.*$" color6 color236 bold

